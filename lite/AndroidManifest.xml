<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.hanhuy.android.irc.lite"
      android:versionCode="8"
      android:versionName="0.01f">
    <application android:label="@string/app_name"
            android:icon="@drawable/ic_appicon"
            android:logo="@drawable/ic_actionlogo"
            android:installLocation="auto">
        <activity
            android:name="com.hanhuy.android.irc.SettingsActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.hanhuy.android.irc.SettingsFragmentActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.hanhuy.android.irc.MainActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.hanhuy.android.irc.IrcService"/>
    </application>
    <uses-sdk android:minSdkVersion="5" android:targetSdkVersion="14"/>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
