<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

            <!--
            android:singleLine="true"
            -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_new_messages"
                android:visibility="gone"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/ic_btn_search_go"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <ImageButton
                android:id="@+id/btn_nick_complete"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/ic_btn_search"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <EditText
                android:id="@+id/input"
                android:autoText="true"
                android:inputType="text|textAutoCorrect"
                android:hint="@string/input_placeholder"
                android:imeOptions="actionSend|flagNoFullscreen"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/btn_speech_rec"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@android:drawable/ic_btn_speak_now"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/drawer_left"
            android:orientation="vertical"
            android:clickable="true"
            android:layout_height="match_parent"
            android:layout_width="@dimen/drawer_width"
            android:background="?attr/qicrDrawerBackground"
            android:layout_gravity="left">
        <ListView
                android:padding="@dimen/standard_padding"
                android:id="@+id/channel_list"
                android:cacheColorHint="?attr/qicrDrawerBackground"
                android:choiceMode="singleChoice"
                android:fastScrollEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/drawer_right"
            android:orientation="vertical"
            android:clickable="true"
            android:layout_height="match_parent"
            android:layout_width="@dimen/drawer_width"
            android:background="?attr/qicrDrawerBackground"
            android:layout_gravity="right">
        <TextView
                android:id="@+id/user_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"/>
        <ListView
                android:padding="@dimen/standard_padding"
                android:id="@+id/nick_list"
                android:choiceMode="singleChoice"
                android:cacheColorHint="?attr/qicrDrawerBackground"
                android:fastScrollEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
