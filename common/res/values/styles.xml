<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance"/>

    <style name="TextAppearance.Small">
      <item name="android:textSize">14sp</item>
      <item name="android:textColor">@color/secondary_text_dark</item>
    </style>

    <style name="TextAppearance.TabWidget_Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tab_indicator_text</item>
    </style>

    <style name="AppTheme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="android:tabWidgetStyle">@style/TextAppearance.TabWidget_Light</item>
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicatorTextFix.Light</item>
        <item name="qicrDrawerBackground">#e0dddddd</item>
    </style>

    <style name="AppTheme.Dark" parent="@style/Theme.AppCompat">
      <!-- seems to break autoLink text...
      <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
      -->
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicatorTextFix</item>
        <item name="qicrDrawerBackground">#cc222222</item>
    </style>

    <style name="TabPageIndicatorTextFix" parent="@style/Widget.TabPageIndicator">
        <!--
         can't use textColorPrimary on gb, it goes black for selected
         -->
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TabPageIndicatorTextFix.Light">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
