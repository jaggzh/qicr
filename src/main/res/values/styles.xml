<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance"/>

    <style name="TextAppearance.Small">
      <item name="android:textSize">14sp</item>
      <item name="android:textColor">@color/secondary_text_dark</item>
    </style>

    <style name="TextAppearance.TabWidget_Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tab_indicator_text</item>
    </style>

    <style name="Base.AppTheme.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- seems to break autoLink text...
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        -->
        <item name="qicrColorTabStyle">@style/ColorTabs</item>
        <item name="colorAccent">#99cc00</item>
        <item name="colorPrimary">#a4c639</item>
        <item name="qicrAddServerIcon">@drawable/ic_add_circle_white_24dp</item>
        <item name="qicrHistoryIcon">@drawable/ic_history_white_24dp</item>
        <item name="qicrReconnectIcon">@drawable/ic_refresh_white_24dp</item>
        <item name="qicrInfoIcon">@drawable/ic_info_outline_white_24dp</item>
        <item name="qicrSaveIcon">@drawable/ic_done_white_24dp</item>
        <item name="qicrEditIcon">@drawable/ic_edit_white_24dp</item>
        <item name="qicrDeleteIcon">@drawable/ic_delete_white_24dp</item>
        <item name="qicrCloseIcon">@drawable/ic_close_white_24dp</item>
        <item name="qicrSettingsIcon">@drawable/ic_settings_white_24dp</item>
        <item name="qicrPeopleIcon">@drawable/ic_people_white_24dp</item>
        <item name="qicrLockRotationIcon">@drawable/ic_screen_lock_rotation_white_24dp</item>
        <item name="qicrStopIcon">@drawable/ic_cancel_white_24dp</item>
        <item name="qicrThemeIcon">@drawable/ic_chrome_reader_mode_white_24dp</item>
        <item name="qicrChatStartIcon">@drawable/ic_chat_white_24dp</item>
        <item name="qicrNickCompleteIcon">@drawable/ic_person_pin_white_24dp</item>
        <item name="qicrNewMessageIcon">@drawable/ic_message_white_24dp</item>
        <item name="qicrSendIcon">@drawable/ic_send_white_24dp</item>
        <item name="qicrSpeechRecIcon">@drawable/ic_mic_white_24dp</item>
        <item name="qicrInputHistoryIcon">@drawable/ic_keyboard_arrow_up_white_24dp</item>
        <item name="qicrChatEndIcon">@drawable/ic_chat_bubble_outline_white_24dp</item>
        <item name="qicrChatIgnoreIcon">@drawable/ic_chat_ignore_dark</item>
        <item name="qicrBrowserOpenIcon">@drawable/ic_open_in_browser_white_18dp</item>
        <item name="qicrProgressSpinnerStyle">@android:style/Widget.ProgressBar.Small</item>
        <item name="android:imageButtonStyle">@style/Widget.ImageButton.Dark</item>
        <item name="qicrDrawerBackground">#cc222222</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="qicrCurrentTheme">@style/AppTheme.Dark</item>
        <item name="qicrToolbarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="inputBackground">@drawable/input_background_dark</item>
        <item name="qicrNotificationIconTint">#ffffffff</item>
        <item name="qicrCardStyle">@style/AppTheme.CardView.Dark</item>
    </style>
    <style name="Base.AppTheme.Light" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="qicrColorTabStyle">@style/ColorTabs</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">#99cc00</item>
        <item name="colorPrimary">#a4c639</item>
        <item name="qicrHistoryIcon">@drawable/ic_history_black_24dp</item>
        <item name="qicrAddServerIcon">@drawable/ic_add_circle_black_24dp</item>
        <item name="qicrReconnectIcon">@drawable/ic_refresh_black_24dp</item>
        <item name="qicrInfoIcon">@drawable/ic_info_outline_black_24dp</item>
        <item name="qicrSaveIcon">@drawable/ic_done_black_24dp</item>
        <item name="qicrEditIcon">@drawable/ic_edit_black_24dp</item>
        <item name="qicrDeleteIcon">@drawable/ic_delete_black_24dp</item>
        <item name="qicrCloseIcon">@drawable/ic_close_black_24dp</item>
        <item name="qicrSettingsIcon">@drawable/ic_settings_black_24dp</item>
        <item name="qicrPeopleIcon">@drawable/ic_people_black_24dp</item>
        <item name="qicrLockRotationIcon">@drawable/ic_screen_lock_rotation_white_24dp</item>
        <item name="qicrStopIcon">@drawable/ic_cancel_black_24dp</item>
        <item name="qicrThemeIcon">@drawable/ic_chrome_reader_mode_black_24dp</item>
        <item name="qicrChatStartIcon">@drawable/ic_chat_black_24dp</item>
        <item name="qicrNickCompleteIcon">@drawable/ic_person_pin_black_24dp</item>
        <item name="qicrNewMessageIcon">@drawable/ic_message_black_24dp</item>
        <item name="qicrSendIcon">@drawable/ic_send_black_24dp</item>
        <item name="qicrInputHistoryIcon">@drawable/ic_keyboard_arrow_up_black_24dp</item>
        <item name="qicrBrowserOpenIcon">@drawable/ic_open_in_browser_black_18dp</item>
        <item name="qicrSpeechRecIcon">@drawable/ic_mic_black_24dp</item>
        <item name="qicrChatEndIcon">@drawable/ic_chat_bubble_outline_black_24dp</item>
        <item name="qicrChatIgnoreIcon">@drawable/ic_chat_ignore_light</item>
        <item name="qicrProgressSpinnerStyle">@android:style/Widget.ProgressBar.Small</item>
        <item name="android:tabWidgetStyle">@style/TextAppearance.TabWidget_Light</item>
        <item name="qicrDrawerBackground">#e0dddddd</item>
        <item name="inputBackground">@drawable/input_background_light</item>
        <item name="android:imageButtonStyle">@style/Widget.ImageButton.Light</item>
        <item name="qicrCurrentTheme">@style/AppTheme.Light</item>
        <item name="qicrToolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="qicrNotificationIconTint">#ff000000</item>
        <item name="qicrCardStyle">@style/AppTheme.CardView.Light</item>
    </style>

    <style name="SettingTheme.Dark" parent="Base.AppTheme.Dark">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="SettingTheme.Light" parent="Base.AppTheme.Light">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="SetupTheme.Dark" parent="AppTheme.Dark"/>
    <style name="SetupTheme.Light" parent="AppTheme.Light"/>
    <style name="AppTheme.CardView.Light" parent="CardView.Light">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    <style name="AppTheme.CardView.Dark" parent="CardView.Dark">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    <style name="ActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="background">@android:color/darker_gray</item>
    </style>
    <style name="AppTheme.Light" parent="Base.AppTheme.Light">
        <item name="actionModeStyle">@style/ActionModeStyle</item>
    </style>

    <style name="AppTheme.Dark" parent="Base.AppTheme.Dark">
        <item name="actionModeStyle">@style/ActionModeStyle</item>
    </style>
    <style name="ColorTabs" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/ColorTabText</item>
    </style>
    <style name="ColorTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.ImageButton.Dark" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/btn_selector_dark</item>
    </style>
    <style name="Widget.ImageButton.Light" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/btn_selector_light</item>
    </style>
    <style name="NotificationText"/>
</resources>
