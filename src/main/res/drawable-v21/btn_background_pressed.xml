<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <inset
                android:insetTop="@dimen/standard_margin"
                android:insetBottom="@dimen/standard_margin"
                android:insetLeft="@dimen/standard_margin"
                android:insetRight="@dimen/standard_margin"
                >
            <shape
                    android:shape="rectangle"
                    android:thickness="1dp"
                    android:useLevel="false">
                <corners android:radius="1dp"/>
                <stroke
                        android:color="#ff555588"
                        android:width="1dp"/>
                <solid android:color="#ccb8b8b8"/>
            </shape>
        </inset>
    </item>

    <item>
        <ripple android:color="?android:attr/colorControlHighlight">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="2dp" />
                    <solid android:color="?android:attr/colorButtonNormal" />
                    <!--<solid android:color="#77555588" />-->
                    <padding android:left="4dp"
                             android:top="4dp"
                             android:right="4dp"
                             android:bottom="4dp" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>
